@model EasyBreath.Domain.Entities.Event.Events

@{
     Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="breadcrumbs" class="breadcrumbs" style="margin-top: 60px">
     <div class="container text-register">
          <div class="d-flex justify-content-between align-items-center">
               <h2 class="page-title">Edit Event</h2>
               <ol>
                    <li><a href="@Url.Action("Index", "Event")">Events</a></li>
